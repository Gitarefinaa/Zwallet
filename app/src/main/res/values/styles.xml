<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextView.SplashScreen">
    <item name ="android:textSize">24sp</item>
    <item name ="android:textColor"> @color/white</item>
    </style>

    <style name="TextView.SplashScreen.Description">
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
        <item name ="android:textColor"> @color/white</item>
        <item name ="android:textSize">14sp</item>
    </style>
    <style name="TextView.HomeActivity.HeaderHomePhone">
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
        <item name ="android:textColor"> @color/HeaderTextPhone</item>
        <item name ="android:textSize">14sp</item>
    </style>
    <style name="TextView.HomeActivity.HeaderHome">
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
        <item name ="android:textColor"> @color/white</item>
        <item name ="android:textSize">14sp</item>
    </style>
    <style name="TextView.HomeActivity.HeaderHomeBalance">
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
        <item name ="android:textColor"> @color/HeaderTextBalance</item>
        <item name ="android:textSize">18sp</item>
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
    </style>
    <style name="MyShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>


    <style name="TextView.HomeActivity">
        <item name ="android:textColor">@color/history</item>
        <item name ="android:textSize">18sp</item>
    </style>

    <style name="Button.Header">
        <item name ="android:background">@drawable/background_header_transaction</item>
        <item name ="android:textSize">18sp</item>
    </style>
    <style name="TextView.HomeActivity.view">
        <item name ="android:textColor">@color/header</item>
        <item name ="android:textSize">14sp</item>
    </style>
    <style name="Style.App.circleImageView" parent="">
        <item name="shapeAppearance">@style/RoundedCorner</item>
    </style>
    <style name="RoundedCorner">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="TextView">

    </style>

    <style name="Button">

    </style>

    <style name="TextView.ProfileActivity">
        <item name="android:textAlignment" >textStart</item>
        <item name="android:textAllCaps" >false</item>
        <item name="android:textColor" >@color/personalInformation</item>

    </style>
    <style name="TextView.ProfileActivity.logout">
        <item name="android:textAlignment" >textStart</item>
        <item name="android:textAllCaps" >false</item>
        <item name="android:textColor" >@color/ZwalletError</item>

    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/primaryColor</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/HeaderTextPhone</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>


</resources>
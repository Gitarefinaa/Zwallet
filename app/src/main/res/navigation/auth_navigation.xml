<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/otpFragment"
        android:name="com.githarefina.zwallet.ui.auth.OtpFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_otp">

        <action
            android:id="@+id/action_otpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>


    <fragment
        android:id="@+id/loginFragment"
        android:name="com.githarefina.zwallet.ui.auth.FragmentLogin"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >


        <action
            android:id="@+id/action_loginFragment_to_resetPasswordEmail"
            app:destination="@id/resetPasswordEmail" />
        <action
            android:id="@+id/action_loginFragment_to_PinFragment"
            app:destination="@id/PinFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_pinActivateFragment"
            app:destination="@id/pinActivateFragment" />

    </fragment>



    <fragment
       android:id="@+id/resetPassword"
       android:name="com.githarefina.zwallet.ui.auth.FragmentLogin"
       android:label="fragment_login"
       tools:layout="@layout/fragment_reset_password"
        />





    <fragment
        android:id="@+id/registerFragment"
        android:name="com.githarefina.zwallet.ui.auth.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_resetPasswordEmail"
            app:destination="@id/resetPasswordEmail" />
        <action
            android:id="@+id/action_registerFragment_to_otpFragment"
            app:destination="@id/otpFragment" />

    </fragment>


    <fragment
        tools:layout="@layout/fragment_reset_password_email"
        android:id="@+id/resetPasswordEmail"
        android:name="com.githarefina.zwallet.ui.auth.ResetPasswordEmail"
        android:label="ResetPasswordEmail" >
        <action
            android:id="@+id/action_resetPasswordEmail_to_resetPassword"
            app:destination="@id/resetPassword" />

    </fragment>
    <fragment
        android:id="@+id/PinFragment"
        android:name="com.githarefina.zwallet.ui.auth.PinFragment"
        android:label="fragment_pin"
        tools:layout="@layout/fragment_pin" >

    </fragment>
    <fragment
        tools:layout="@layout/fragment_pin_success"
        android:id="@+id/pinSuccessFragment"
        android:name="com.githarefina.zwallet.ui.main.PinSuccessFragment"
        android:label="PinSuccessFragment" >
        <action
            android:id="@+id/action_pinSuccessFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_pin_activate"
        android:id="@+id/pinActivateFragment"
        android:name="com.githarefina.zwallet.ui.auth.PinActivateFragment"
        android:label="PinActivateFragment" >
        <action
            android:id="@+id/action_pinActivateFragment_to_pinSuccessFragment"
            app:destination="@id/pinSuccessFragment" />
    </fragment>


</navigation>